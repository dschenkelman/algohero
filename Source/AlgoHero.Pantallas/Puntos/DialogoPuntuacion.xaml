<Window x:Class="AlgoHero.Pantallas.Puntos.DialogoPuntuacion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Puntuacion" Height="150" Width="420" Background="Black"
    ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="0">
           <TextBlock Text="La cancion ha finalizado. Tu puntaje final fue:" Foreground="Gold" FontSize="14"/>
            <TextBlock Text="{Binding PuntosAcumulados}" Foreground="Gold" FontSize="14" Margin="5,0,0,0"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Volver al menu principal" IsDefault="True" Foreground="Black" Background="Gold" Width="Auto" HorizontalAlignment="Center" FontSize="14" Click="Button_Click"/>
    </Grid>
</Window>
